{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.6.4",
        "echobool/alipay-laravel5": "dev-master",
        "laravel/framework": "5.4.*",
        "laravel/socialite": "^3.0",
        "laravel/tinker": "~1.0",
        "phpoffice/phpspreadsheet": "^1.3",
        "socialiteproviders/weixin-web": "^3.0",
        "yansongda/laravel-notification-wechat": "^1.1",
        "yansongda/laravel-pay": "1.0.3"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.7"
    },
    "autoload": {
        "classmap": [
            "database",
            "app/Library/CCPRestSmsSDK.php",
            "app/Library/QueryLogTracker.php",
            "app/Tools/Cart.php",
            "app/Tools/WcNotify.php"
        ],
        "psr-4": {
            "App\\": "app/"
        },
        "files":[
            "app/Library/Functions.php",
            "app/Library/SendTemplateSMS.php",
            "app/Library/log.txt"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}
